<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/ele"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ele" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cook"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/cook" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/plumber"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/plumber" />
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:id="@+id/beauty"
            android:layout_width="120dp"
            android:layout_height="180dp"

            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp" android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/beauty" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/tutor"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp" android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tutor" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/repair"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp" android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/repair" />


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/health"
            android:layout_width="120dp"
            android:layout_height="180dp"

            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp" android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/health" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/driver"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp" android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/driver" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/other"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            app:cardElevation="10dp"

            app:cardCornerRadius="50dp" android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/other" />

        </android.support.v7.widget.CardView>

    </LinearLayout>





</RelativeLayout>